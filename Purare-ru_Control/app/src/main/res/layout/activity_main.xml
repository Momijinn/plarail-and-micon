<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#F0E68C">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ready_Switch"
        android:text="Ready..."
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sokudo_TextView"
        android:text="0 km"
        android:textSize="30dp"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/Sokudo_SeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Sokudo_SeekBar"
        android:max="255"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/Ready_Switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Onsei_Button"
        android:text="声!!"
        android:background="@drawable/layout_button"
        android:layout_below="@+id/Sokudo_SeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Emagence_Button"
        android:text="緊急停止"
        android:background="#FF4500"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/Onsei_Button"
        android:layout_alignRight="@+id/Ready_Switch"
        android:layout_alignEnd="@+id/Ready_Switch" />



    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Debug_Button"
        android:text="デバッグ"
        android:background="@drawable/layout_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Sokudo_SeekBar"
        android:layout_alignEnd="@+id/Sokudo_SeekBar" />
        -->


</RelativeLayout>
